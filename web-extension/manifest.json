{
  "manifest_version": 2,

  "name": "Snipstream",
  "version": "1.0.0",

  "page_action": {
    "default_icon": {
      "16": "media/icon16.png",
      "24": "media/icon24.png",
      "32": "media/icon32.png"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "css": ["toast.css"]
  }],

  "permissions": [
    "declarativeContent",
    "tabs"
  ]
}
